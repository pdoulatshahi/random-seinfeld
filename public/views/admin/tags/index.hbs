<div class="container">

  <div class="tags-container">
    {{#each tags}}
        <div class="chip blue-grey lighten-4">
          <a href="/admin/tags/{{this.slug}}/edit">
            {{this.title}}
          </a>
        </div>
    {{/each}}
  </div>

  <div class="button-container">
    <a href="/admin/tags/new" class="btn waves-effect waves-light">Add Tag
      <i class="material-icons right">send</i>
    </a>
  </div>

</div>
