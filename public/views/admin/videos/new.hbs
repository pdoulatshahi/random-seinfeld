<div class="container">

  <div class="form-container">
    <form class="col s12" action="/admin/video/new" method="post">
      <div class="row">
        <div class="input-field col s12">
          <input id="youtube_url" type="text" name="youtube_url" class="validate">
          <label for="youtube_url">YouTube URL</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name="episode_title" id="autocomplete-input" class="autocomplete">
          <label for="autocomplete-input">Episode Title</label>
        </div>
      </div>
      <div class="row center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">Add Video
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
</div>
