<div class="container">
  <div class="form-container">
    <form autocomplete="off" action={{#if video}}"/admin/videos/{{video._id}}/edit"{{else}}"/admin/videos/new"{{/if}} method="post">
      <div class="row">
        <div class="input-field col s12">
          <input id="title" type="text" name="title" class="validate" value="{{video.title}}">
          <label for="title">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="youtube_url" type="text" name="youtube_url" class="validate" value="{{#if video}}http://www.youtube.com/{{video.youTubeId}}{{/if}}">
          <label for="youtube_url">YouTube URL</label>
        </div>
      </div>
      <div id="yt-container" class="row video-container">
        <iframe width="560" height="315" src="//www.youtube.com/embed/{{video.youTubeId}}" frameborder="0" allowfullscreen></iframe>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="description" name="description" class="materialize-textarea" value={{video.description}}></textarea>
          <label for="description">Description</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name="episode_title" id="autocomplete-input" value="{{video.title}}" class="autocomplete">
          <label for="autocomplete-input">Episode Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <div class="chips chips-initial chips-autocomplete">
          </div>
          <input type="hidden" name="tags" id="tags" value="{{video.tags}}">
        </div>
      </div>
      <div class="row center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">Add Video
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
</div>
