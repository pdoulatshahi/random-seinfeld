<div class="container">

  <div class="form-container">
    <form class="col s12" action="/admin/video/{{video.slug}}/edit" method="post">
      <div class="row">
        <div class="input-field col s12">
          <input id="youtube_url" type="text" name="youtube_url" value="http://www.youtube.com/watch?v={{video.youTubeId}}" class="validate">
          <label for="youtube_url">YouTube URL</label>
        </div>
      </div>
      <div id="yt-container" class="row">
        <iframe width="560" height="315" src="//www.youtube.com/embed/{{video.youTubeId}}" frameborder="0" allowfullscreen></iframe>
      </div>
      <div class="row">
        <div class="chips chips-autocomplete"></div>
      </div>
      <div class="row center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">Edit Video
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
</div>
