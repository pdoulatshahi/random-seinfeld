<div class="center-align">
  <ul class="pagination">
    {{#paginate pagination type="first"}}
      <li {{#if disabled}}class="disabled"{{/if}}>
        <a href="?p={{n}}">First</a>
      </li>
    {{/paginate}}
    {{#paginate pagination type="previous"}}
      <li {{#if disabled}}class="disabled"{{/if}}>
        <a href="?p={{n}}"><i class="material-icons">chevron_left</i></a>
      </li>
    {{/paginate}}
    {{#paginate pagination type="middle" limit="7"}}
      <li {{#if active}}class="active"{{else}}class="waves-effect"{{/if}}>
        <a href="?p={{n}}">{{n}}</a>
      </li>
    {{/paginate}}
    {{#paginate pagination type="next"}}
      <li {{#if disabled}}class="disabled"{{/if}}>
        <a href="?p={{n}}"><i class="material-icons">chevron_right</i></a>
      </li>
    {{/paginate}}
    {{#paginate pagination type="last"}}
      <li {{#if disabled}}class="disabled"{{/if}}>
        <a href="?p={{n}}">Last</a>
      </li>
    {{/paginate}}
  </ul>
</div>
